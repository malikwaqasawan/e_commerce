<div class="container">
  <div class="row">
    <div class="col-md-2 col-md-offset-6">
      <strong><%= link_to('View Cart', carts_path) %></strong>
    </div>
    <div class="col-md-2">
      <strong><%= link_to('Change password', edit_user_registration_path) %></strong>
    </div>
    <div class="col-md-2">
      <strong><%= link_to('Logout', destroy_user_session_path) %></strong>
    </div>

  </div>
</div>

<!-- <div style="text-align: center"><h1>E-Commerce</h1> </div> -->
<div class="container">
	<nav class="navbar navbar-light bg-faded">
    <div class="collapse navbar-toggleable-xs" id="navbar-header">
      <a class="navbar-brand" href="#">Index</a>
    </div>
  </nav> <!-- /navbar -->
  <% @products.in_groups_of(3, false).each do |grouped_product| %>
		<div class="row">
			<%grouped_product.each do |product|%>
				<div class="col-xs-4" style="text-align:center">
					<%= image_tag product.images.first.photo_url(:thumb) , class:"img-circle" %>
					<h4>
						<%= product.id %>.
						<%= link_to product.name, product %>
					</h4>
					<div class="row">
						<div class="col-md-4">
							<%=  link_to "Edit", edit_product_path(product) %>
						</div>
            <div class="col-md-4">
              <%= form_for( product, url: add_to_cart_path(product.id), method: :post) do |f|%>
                <%= f.submit "Add to Cart" %>
              <% end %>
            </div>
						<div class="col-md-4">
            </div>
							<%=  link_to "Delete", product,data: { confirm: 'Are you sure?'}, method: :delete %>
					</div>
					<hr />
				</div>
			<% end %>
		</div>
	<% end -%>
  <%= link_to "Add new Product", new_product_path %>

</div>